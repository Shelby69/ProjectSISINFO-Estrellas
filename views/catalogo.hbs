          <form action="eliminar/{{_id}}?_method=DELETE" method='POST' >
            <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class = "btn btn-danger" > Eliminar</button>
         </form>

         <div id="demo" class="collapse">
           <p class="text">Tamaño: {{tamaño}}</p>
           <p class="text">Brillo: {{brillo}}</p>
           <p class="text">Color: {{color}}</p>
           <p class="text">Temperatura: {{temperatura}}</p>
           <p class="text">Edad: {{edad}}</p>
         </div>

      </div>
    </div>
  </div>
  {{/each}}
</div>
