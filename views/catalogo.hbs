<div class="row">
  {{#each estrellas}}
  <div class="col-sm-3">
    <div class="card mb-3" style="width:18rem;">
      <img class="card-img-top" src="{{imagen}}" alt="Catalogo" style="width:100%">
      <div class="card-body">
        <h4 class="card-title">{{nombre}}</h4>
          <p class="card-text">{{tipo}}</p>
          <a href="#demo" class="btn btn-info" data-toggle="collapse">Mostrar todo</a>

